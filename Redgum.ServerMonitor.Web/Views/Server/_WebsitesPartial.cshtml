@model Redgum.ServerMonitor.Web.ServerMonitor.Models.ServerModel
@using Humanizer;
<div class="row">

    <div class="col-md-6">

        <h3>Websites</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>State</th>
                        <th>Physical Path</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.Websites)
                    {
                        if (!String.Equals(@t.State, "Started", StringComparison.InvariantCultureIgnoreCase))
                        {
                        <tr class="warning">
                            <td>@t.Name</td>
                            <td>@t.State</td>
                            <td>@t.PhysicalPath</td>
                        </tr>
                        }
                        else
                        {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.State</td>
                            <td>@t.PhysicalPath</td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-6">

        <h3>App Pools</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>State</th>
                        <th>.NET Version</th>
                        <th>Mode</th>
                        <th>32 Bit?</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.AppPools)
                    {
                        if (!String.Equals(@t.State, "Started", StringComparison.InvariantCultureIgnoreCase))
                        {
                        <tr class="warning">
                            <td>@t.Name</td>
                            <td>@t.State</td>
                            <td>@t.managedRuntimeVersion</td>
                            <td>@t.managedPipelineMode</td>
                            <td>@if (t.enable32BitAppOnWin64)
                                {<span class="glyphicon glyphicon-thumbs-up"></span>}
                            </td>
                        </tr>
                        }
                        else
                        {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.State</td>
                            <td>@t.managedRuntimeVersion</td>
                            <td>@t.managedPipelineMode</td>
                            <td>@if (t.enable32BitAppOnWin64)
                                {<span class="glyphicon glyphicon-thumbs-up"></span>}
                            </td>
                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>
