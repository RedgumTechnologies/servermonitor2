@model Redgum.ServerMonitor.Web.ServerMonitor.Models.ServerModel
@using Humanizer;
<div class="row">
    <div class="col-md-6">
        <h3>SQL Servers</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Start Mode</th>
                        <th>State</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var t in Model.SqlServers)
                    {
                        if (!String.Equals(@t.State, "Running", StringComparison.InvariantCultureIgnoreCase))
                        {
                        <tr class="warning">
                            <td>@t.Name</td>
                            <td>@t.StartMode</td>
                            <td>@t.State</td>
                            <td>@t.Status</td>
                        </tr>

                        }
                        else
                        {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.StartMode</td>
                            <td>@t.State</td>
                            <td>@t.Status</td>
                        </tr>

                        }

                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-6">
        <h3>SQL Databases</h3>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Instance</th>
                        <th>Name</th>
                        @*<th>Instance</th>*@
                        <th>Size</th>
                        <th>Space Available</th>
                        <th>Last Backup</th>
                    </tr>

                </thead>
                <tbody>
                    @foreach (var t in Model.SqlDatabases)
                    {
                        if (!t.IsSystemObject && !t.LastBackupDate.HasValue)
                        { 
                            
                        <tr class="danger">
                            <td>@t.InstanceName</td>
                            <td>@t.Name @if (t.IsSystemObject)
                                        {<span class="glyphicon glyphicon-asterisk" title="System Database"></span>}</td>
                            <td>@t.Size</td>
                            <td>@t.SpaceAvailable</td>
                            <td>Never</td>
                        </tr>
                        }
                        else
                            if (!t.IsSystemObject && DateTime.Now.Subtract(t.LastBackupDate.Value).TotalHours > 48)
                            {
                        <tr class="warning">
                            <td>@t.InstanceName</td>
                            <td>@t.Name @if (t.IsSystemObject)
                                        {<span class="glyphicon glyphicon-asterisk" title="System Database"></span>}</td>
                            <td>@t.Size</td>
                            <td>@t.SpaceAvailable</td>
                            <td>@t.LastBackupDate.Value.Humanize()</td>
                        </tr>  
                            }
                            else
                            {
                                {
                        <tr>
                            <td>@t.InstanceName</td>
                            <td>@t.Name @if (t.IsSystemObject)
                                        {<span class="glyphicon glyphicon-asterisk" title="System Database"></span>}</td>
                            <td>@t.Size</td>
                            <td>@t.SpaceAvailable</td>
                            <td>@if (t.LastBackupDate.HasValue)
                                {
                                @t.LastBackupDate.Value.Humanize()}
                                else
                                {<text>Never</text>}</td>
                        </tr>  
                                }
                            }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
